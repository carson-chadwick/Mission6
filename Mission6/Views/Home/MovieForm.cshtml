@using Mission06_Chadwick.Models

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

@model Mission6.Models.MovieFormModel


<div class="container mt-4">
    <h2>Movie Form</h2>
    <form method="post">
        <input type="hidden" asp-for="MovieId" />
        <!-- Category (Required) -->
@*         <div class="mb-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" required>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
 *@

        <!-- Title (Required) -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Year (Required) -->
        <div class="mb-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" type="number" required>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <!-- Director-->
        <div class="mb-3">
            <label asp-for="Director" class="form-label"></label>
            <input asp-for="Director" class="form-control">
        </div>
        <!-- Category-->
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select" required>
                <option value="">Select a Category </option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
        </div>

        <!-- Rating (Dropdown) -->
        <div class="mb-3">
            <label asp-for="Rating" class="form-label"></label>
            <select asp-for="Rating" class="form-select">
                <option value="">Select a Rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <!-- Edited (Yes/No Checkbox) -->
        <div class="mb-3">
            <label asp-for="Edited" class="form-label">Edited</label>
            <select asp-for="Edited" class="form-select">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
        </div>

        <!-- Lent To (Optional) -->
        <div class="mb-3">
            <label asp-for="LentTo" class="form-label"></label>
            <input asp-for="LentTo" class="form-control">
        </div>

        <!-- Coppied to Plex (Yes/No Checkbox) -->
        <div class="mb-3">
            <label asp-for="Plex" class="form-label">Copied To Plex</label>
            <select asp-for="Plex" class="form-select" required>
                <option value=0>No</option>
                <option value=1>Yes</option>
            </select>
        </div>




        <!-- Notes (Optional, Max 25 Characters) -->
        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <input asp-for="Notes" class="form-control" maxlength="25">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

