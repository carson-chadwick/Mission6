@{
    ViewData["Title"] = "Movie Form";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

@model Mission6.Models.MovieFormModel
<!-- Success Alert -->
@if (TempData["SuccessMessage"] != null)
{
    <script>
        window.onload = function() {
            alert("@TempData["SuccessMessage"]");
        };
    </script>
}

<div class="container mt-4">
    <h2>Movie Form</h2>
    <form asp-action="MovieForm" method="post">
        <!-- Category (Required) -->
        <div class="mb-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" required>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <!-- Title (Required) -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Year (Required) -->
        <div class="mb-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" type="number" required>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <!-- Director (Required) -->
        <div class="mb-3">
            <label asp-for="Director" class="form-label"></label>
            <input asp-for="Director" class="form-control" required>
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <!-- Rating (Dropdown) -->
        <div class="mb-3">
            <label asp-for="Rating" class="form-label"></label>
            <select asp-for="Rating" class="form-select" required>
                <option value="">Select a Rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <!-- Edited (Yes/No Checkbox) -->
        <div class="mb-3">
            <label asp-for="Edited" class="form-label">Edited</label>
            <select asp-for="Edited" class="form-select">
                <option value="">Select an option</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <!-- Lent To (Optional) -->
        <div class="mb-3">
            <label asp-for="LentTo" class="form-label"></label>
            <input asp-for="LentTo" class="form-control">
        </div>

        <!-- Notes (Optional, Max 25 Characters) -->
        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <input asp-for="Notes" class="form-control" maxlength="25">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

