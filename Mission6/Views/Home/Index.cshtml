@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}

@model List<MovieFormModel>

<!-- Centered title and image section -->
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <img src="~/images/joelhiltonheadshot.jpg" class="img-fluid" alt="Joel Hilton Headshot" />
</div>
<br />
<br />
<!-- Table to display movie details -->
<table class="table table-striped table-bordered">
    <thead class="fw-bold">
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>LentTo</th>
            <th>Copied to Plex</th>
            <th>Notes</th>
            <th>Actions</th> <!-- Column for edit and delete buttons -->
        </tr>
    </thead>

    <!-- Loop through each movie in the model and display its details -->
    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Category.CategoryName</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Plex</td>
                <td>@x.Notes</td>

                <!-- Edit and Delete buttons in a flex container -->
                <td>
                    <div class="d-flex">
                        <a class="btn btn-primary me-2" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a>
                    </div>
                </td>
            </tr>
        </tbody>
    }
</table>



