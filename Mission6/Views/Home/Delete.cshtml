@model MovieFormModel

<!-- Page Title -->
<div class="text-center mb-4">
    <h2 class="text-dark" style="font-family: 'Arial', sans-serif; font-weight: normal;">Confirm Deletion</h2>
    <h3 class="text-dark">@Model.Title</h3>
</div>

<!-- Deletion Form -->
<div class="container d-flex justify-content-center">
    <form method="post" class="w-50">
        <!-- Hidden Input for MovieId -->
        <input type="hidden" asp-for="MovieId" />

        <!-- Buttons Side by Side, Centered -->
        <div class="d-flex justify-content-between mb-3">
            <!-- Delete Button -->
            <button type="submit" class="btn btn-danger">Delete</button>

            <!-- Cancel Button -->
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>


